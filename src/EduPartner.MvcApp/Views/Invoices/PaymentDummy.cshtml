@model PaymentDummyViewModel

@{
    ViewData["Title"] = "Invoice";

    var invoice = ViewData["Invoice"] as Invoice;
}

<h1>Payment Gateway Dummy</h1>
    
<div class="row">
    <div class="col-md">
        <div class="card text-center">
            <div class="card-body">
                <h5 class="card-title">EduPartner Invoice Payment</h5>
                <form asp-action="PaymentDummy">
                    <input type="hidden" asp-for="InvoiceId" value="@invoice.Id" />
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Invoice date</label>
                        <div class="col-sm-10">
                            <input type="text" readonly class="form-control-plaintext" value="@invoice.Date.ToString("dd/MM/yyyy")" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Total amount</label>
                        <div class="col-sm-10">
                            <input type="text" readonly class="form-control-plaintext" value="@($"RM{invoice.TotalAmount().ToString("N")}")" />
                        </div>
                    </div>
                    <input type="submit" class="btn btn-primary" value="Pay" />
                    <a asp-action="Invoice" asp-route-id="@invoice.Id" class="btn btn-danger">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>
